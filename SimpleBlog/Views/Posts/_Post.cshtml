@using System.Activities.Statements
@using Remotion.Linq.Parsing.Structure.IntermediateModel
@model SimpleBlog.Models.Post

<article class="post">
    <h1><a href="@Url.RouteUrl("Post", new{Model.Id, Model.Slug})">@Model.Title</a></h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    <footer>
        <ul class="pull-right list-unstyled tags">
            @foreach (var tag in Model.Tags)
            {
                <li>
                    <a href="@Url.RouteUrl("Tag", new {tag.Id, tag.Slug})" class="badge">@tag.Name</a>
                </li>
            }
        </ul>
        Posted: <abbr class="timeago" title="@Model.CreatedAt.ToString("o")"></abbr>
        @if(Model.UpdatedAt != null)
        {
            @: Last Updated <abbr class="timeago" title="@Model.UpdatedAt.Value.ToString("o")"></abbr>
        }
    </footer>
</article>